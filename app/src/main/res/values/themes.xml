<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="actionBarTheme" format="reference" />
    <attr name="tabTextColorChecked" format="reference" />
    <attr name="tabTextColorNormal" format="reference" />
    <attr name="dividerColor" format="color" />
    <attr name="itemTitleBackground" format="reference" />
    <attr name="itemTitleTextColor" format="reference" />
    <attr name="itemContentBackgroundNormal" format="reference" />
    <attr name="itemContentBackgroundPressed" format="reference" />
    <attr name="itemContentTextColor" format="reference" />

    <!-- 日间模式 -->
    <!-- 基本主题设置 -->
    <style name="ThemeBaseDay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="android:windowBackground">@color/windowBackgroundDay</item>
        <item name="actionBarTheme">@style/ThemeActionBarDay</item>
        <item name="popupTheme">@style/ThemePopDay</item>
        <item name="tabTextColorChecked">@color/colorPrimaryDay</item>
        <item name="tabTextColorNormal">@color/colorWhite</item>
        <item name="dividerColor">@color/dividerColorDay</item>
        <item name="itemTitleBackground">@color/dividerColorDay</item>
        <item name="itemTitleTextColor">@color/itemTitleTextColorDay</item>
        <item name="itemContentBackgroundNormal">@color/itemContentBackgroundNormalDay</item>
        <item name="itemContentBackgroundPressed">@color/itemContentBackgroundPressedDay</item>
        <item name="itemContentTextColor">@color/colorBlack</item>
    </style>

    <!-- APP主题 -->
    <style name="ThemeAppDay" parent="ThemeBaseDay">

    </style>

    <!-- ActionBar theme 主题 -->
    <style name="ThemeActionBarDay" parent="ThemeOverlay.AppCompat.Dark">
        <!-- 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <!-- ActionBar popupTheme 主题 -->
    <style name="ThemePopDay" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">@color/colorAccentDay</item>-->
        <!-- 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/colorPrimaryDay</item>
    </style>

    <!-- 夜间模式 -->
    <!-- 基本样式主题设置 -->
    <style name="ThemeBaseNight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:windowBackground">@color/windowBackgroundNight</item>
        <item name="actionBarTheme">@style/ThemeActionBarNight</item>
        <item name="popupTheme">@style/ThemePopNight</item>
        <item name="tabTextColorChecked">@color/colorPrimaryNight</item>
        <item name="tabTextColorNormal">@color/colorWhite</item>
        <item name="dividerColor">@color/dividerColorNight</item>
        <item name="itemTitleBackground">@color/dividerColorNight</item>
        <item name="itemTitleTextColor">@color/itemTitleTextColorNight</item>
        <item name="itemContentBackgroundNormal">@color/itemContentBackgroundNormalNight</item>
        <item name="itemContentBackgroundPressed">@color/itemContentBackgroundPressedNight</item>
        <item name="itemContentTextColor">@color/colorWhite</item>
    </style>

    <!-- APP主题 -->
    <style name="ThemeAppNight" parent="ThemeBaseNight">

    </style>

    <!-- ActionBar theme 主题 -->
    <style name="ThemeActionBarNight" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <!-- ActionBar popupTheme 主题 -->
    <style name="ThemePopNight" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">@color/colorAccentDay</item>-->
        <!-- 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/colorPrimaryNight</item>
    </style>
</resources>