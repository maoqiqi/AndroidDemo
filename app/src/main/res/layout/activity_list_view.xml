<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/btn_array_adapter"
        style="@style/btn_style"
        android:text="ArrayAdapter" />

    <Button
        android:id="@+id/btn_simple_adapter"
        style="@style/btn_style"
        android:text="SimpleAdapter" />

    <Button
        android:id="@+id/btn_simple_cursor_adapter"
        style="@style/btn_style"
        android:text="SimpleCursorAdapter" />

    <Button
        android:id="@+id/btn_base_adapter"
        style="@style/btn_style"
        android:text="BaseAdapter" />

</LinearLayout>