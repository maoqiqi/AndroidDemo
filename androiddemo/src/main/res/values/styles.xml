<resources>

    <!-- 主页底部样式 -->
    <style name="tab_main_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_tab_main_selector</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_tab_main_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 解决Android 5.0 以上版本Button自带阴影效果的方法-->
    <!-- 1.直接在要去掉button的XML文件中加：style="?Android:attr/borderlessButtonStyle"-->
    <!-- 设置该属性就可以去掉自带的阴影。该属性在API 11及以上可用。-->
    <!-- 2.直接在style中设置：parent="Base.Widget.AppCompat.Button.Borderless"-->
    <style name="btn_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_btn_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/itemContentTextColor</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="txt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/itemContentTextColor</item>
    </style>

    <style name="edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/itemContentTextColor</item>
    </style>

    <!--定义switch 的按钮文字样式-->
    <style name="switch_text_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!--定义switch 的按钮和轨迹颜色theme-->
    <style name="switch_style" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的按钮的颜色 轨迹颜色默认为30%（看效果就明白30%是怎么回事了）这个颜色 -->
        <item name="colorControlActivated">#4CD964</item>
        <!--  switch关闭时的按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <!-- switch关闭时的轨迹的颜色 30% 这个颜色 -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="ThemeAppDay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeAppDay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>